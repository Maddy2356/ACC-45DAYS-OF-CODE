import java.util.Scanner;

class BathInWinters {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);

        int T = sc.nextInt(); 
        while (T-- > 0) {
            int X = sc.nextInt(); 
            int Y = sc.nextInt(); 
            int waterPerPerson = 2 * Y;

            int maxPeople = X / waterPerPerson;

            System.out.println(maxPeople);
        }

        sc.close();
    }
}
